<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:shadowRadius="3"
            android:layout_marginTop="12pt"
            android:layout_marginHorizontal="6pt"
            android:fontFamily="@font/heebo_bold"
            android:text="תוכן החבילה"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="normal" />

        <Spinner android:id="@+id/package_type"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/rounded_text"
            android:layout_gravity="center"
            android:padding="5.5dp"
            android:layout_marginTop="45dp"
            android:textAlignment="center"
            android:entries="@array/package_type"
            android:layout_height="wrap_content" />

        <Spinner android:id="@+id/breakable"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/rounded_text"
            android:layout_gravity="center"
            android:padding="5.5dp"
            android:layout_marginTop="13pt"
            android:textAlignment="center"
            android:entries="@array/breakable"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13pt"
            android:hint="משקל החבילה בקילוגרמים"
            android:inputType="number"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="#000"
            android:background="@drawable/rounded_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/heebo_bold"
                android:padding="2dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_location_on"
                android:drawablePadding="2dp"
                android:layout_gravity="center"
                android:fontFamily="@font/heebo_bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/add_package"
            android:layout_marginTop="40dp"
            android:background="@drawable/circle_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/missing_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:fontFamily="@font/heebo_bold"
            android:text="חסרים פרטים!"
            android:textColor="#FF0000"
            android:textStyle="normal" />

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:id="@+id/progress_circular" />


    </LinearLayout>

    <TextView
        android:id="@+id/textViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="back"
        android:clickable="true"
        android:textSize="9pt"
        android:textColor="#CEFDCF" />
</RelativeLayout>


