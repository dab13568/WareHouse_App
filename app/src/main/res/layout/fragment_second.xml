<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_add_package"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17pt"
        android:layout_marginTop="12pt"
        android:layout_marginHorizontal="6pt"
        android:fontFamily="@font/heebo_regular"
        android:text="תוכן החבילה"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="normal" />

    <Spinner android:id="@+id/package_type"
        android:layout_width="120pt"
        android:background="@drawable/rounded_text"
        android:layout_gravity="center"
        android:padding="6dp"
        android:layout_marginTop="30pt"
        android:textAlignment="center"
        android:entries="@array/package_type"
        android:layout_height="wrap_content" />

    <Spinner android:id="@+id/breakable"
        android:layout_width="120pt"
        android:background="@drawable/rounded_text"
        android:layout_gravity="center"
        android:padding="6dp"
        android:layout_marginTop="13pt"
        android:textAlignment="center"
        android:entries="@array/breakable"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="120pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="13pt"
        android:hint="משקל החבילה בקילוגרמים"
        android:inputType="number"
        android:layout_gravity="center"
        android:padding="6dp"
        android:textColor="#ffffff"
        android:drawablePadding="5dp"
        android:background="@drawable/rounded_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="6pt"
        android:layout_marginTop="20pt"
        android:layout_marginRight="24pt"
        android:fontFamily="@font/heebo_bold"
        android:text="מיקום נוכחי של החבילה:"
        android:textColor="#ffffff"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/address"
        android:layout_width="120pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:inputType="number"
        android:textDirection="anyRtl"
        android:drawableRight="@drawable/ic_location_on"
        android:drawablePadding="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/heebo_bold"
        android:padding="6dp"
        android:textColor="#ffffff"/>

    <ImageButton
        android:id="@+id/add_package"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/error"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/missing_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:fontFamily="@font/heebo_bold"
        android:text="חסרים פרטים!"
        android:textColor="#FF0000"
        android:textStyle="normal" />




</LinearLayout>


