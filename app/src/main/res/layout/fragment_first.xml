<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_marginHorizontal="6pt"
            android:layout_marginTop="12pt"
            android:fontFamily="@font/heebo_bold"
            android:text="פרטי מקבל החבילה"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_text"
            android:drawableRight="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:maxLength="10"
            android:hint="מספר פלאפון"
            android:inputType="number"
            android:padding="7dp"
            android:textColor="#040E69" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10pt"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_text"
            android:drawableRight="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:hint="שם הנמען"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:padding="7dp"
            android:textColor="#040E69" />
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/parcel_address_maps"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="160pt"
            android:layout_marginBottom="2dp"
            android:layout_marginHorizontal="5pt"
            tools:context=".AddPackage" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:text="next"
        android:textColor="#CEFDCF"
        android:textSize="9pt" />
</RelativeLayout>